let g:rails_projections = {
      \  "acceptance/*_spec.rb": {
      \    "command": "acceptance"
      \  },
      \  "spec/support/*": {
      \    "command": "support"
      \  },
      \ "spec/features/*.feature": {
      \  "command": "feature",
      \  "alternate": "spec/features/step_definitions/%s_steps.rb"
      \ },
      \ "spec/features/step_definitions/*_steps.rb": {
      \  "command": "step",
      \  "alternate": "spec/features/%s.feature"
      \ },
      \ "spec/factories/*.rb": {
      \  "command": "factory",
      \  "affinity": "model"
      \ },
      \ "app/uploaders/*.rb": {
      \  "command": "uploader"
      \ },
      \ "app/admin/*.rb": {
      \  "command": "admin",
      \  "affinity": "model"
      \ },
      \ "app/workers/*.rb": {
      \  "command": "worker"
      \ },
      \ "db/structure.sql": {
      \  "command": "structure",
      \  "affinity": "database"
      \ }
      \}

